  <script>
    // ----------------------
    // HERO GLITCH WORD SWAP
    // ----------------------
    const words = [
      "STEP INTO.",
      "BUILD.",
      "EXECUTE.",
      "TOUCH.",
      "LAUNCH.",
      "MEASURE."
    ];

    const targetSpan = document.getElementById('dynamic-text');
    let index = 0;

    function cycleWord() {
      index = (index + 1) % words.length;
      targetSpan.classList.add('glitch-swap-active');
      setTimeout(() => { targetSpan.innerText = words[index]; }, 140);
      setTimeout(() => { targetSpan.classList.remove('glitch-swap-active'); }, 280);
    }

    const prefersReducedMotion = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (!prefersReducedMotion) setInterval(cycleWord, 1700);

    // ----------------------
    // HUD / TARGET CANVAS
    // ----------------------
    const canvas = document.getElementById('hud-canvas');
    const ctx = canvas.getContext('2d');

    let width, height;
    let mouseX = -100, mouseY = -100;
    let smoothX = -100, smoothY = -100;
    const targets = [];

    const colors = {
      green: '#39ff14',
      pink: '#ff00ff',
      red: '#ff3333',
      cyan: '#00ffff',
      grid: 'rgba(57, 255, 20, 0.10)'
    };

    function resize() {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
      initTargets();
    }

    function initTargets() {
      targets.length = 0;
      const count = Math.floor(width * height / 220000);
      for (let i = 0; i < count; i++) {
        targets.push({
          x: Math.random() * width,
          y: Math.random() * height,
          size: 10 + Math.random() * 20,
          rotation: Math.random() * Math.PI * 2,
          speed: (Math.random() - 0.5) * 0.02,
          type: Math.floor(Math.random() * 3),
          color: Math.random() > 0.82 ? colors.pink : colors.grid
        });
      }
    }

    window.addEventListener('resize', resize);
    window.addEventListener('mousemove', e => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    });

    resize();

    function drawHud() {
      if (prefersReducedMotion) return;

      ctx.clearRect(0, 0, width, height);

      smoothX += (mouseX - smoothX) * 0.15;
      smoothY += (mouseY - smoothY) * 0.15;

      // Background targets
      targets.forEach(t => {
        t.rotation += t.speed;
        ctx.save();
        ctx.translate(t.x, t.y);
        ctx.rotate(t.rotation);
        ctx.strokeStyle = t.color;
        ctx.lineWidth = 1;

        if (t.type === 0) {
          ctx.setLineDash([5, 10]);
          ctx.beginPath();
          ctx.arc(0, 0, t.size, 0, Math.PI * 2);
          ctx.stroke();
        } else if (t.type === 1) {
          const s = t.size;
          ctx.setLineDash([]);
          ctx.beginPath();
          ctx.moveTo(-s, -s/2); ctx.lineTo(-s, -s); ctx.lineTo(-s/2, -s);
          ctx.moveTo(s, s/2); ctx.lineTo(s, s); ctx.lineTo(s/2, s);
          ctx.stroke();
        } else {
          ctx.setLineDash([]);
          ctx.beginPath();
          ctx.moveTo(-4, 0); ctx.lineTo(4, 0);
          ctx.moveTo(0, -4); ctx.lineTo(0, 4);
          ctx.stroke();
        }

        ctx.restore();
      });

      // Crosshairs
      ctx.strokeStyle = 'rgba(57, 255, 20, 0.14)';
      ctx.setLineDash([]);
      ctx.lineWidth = 1;

      ctx.beginPath();
      ctx.moveTo(smoothX, 0);
      ctx.lineTo(smoothX, height);
      ctx.stroke();

      ctx.beginPath();
      ctx.moveTo(0, smoothY);
      ctx.lineTo(width, smoothY);
      ctx.stroke();

      // Active reticle
      ctx.strokeStyle = colors.pink;
      ctx.lineWidth = 1.5;
      ctx.beginPath();
      ctx.arc(smoothX, smoothY, 8, 0, Math.PI * 2);
      ctx.stroke();

      ctx.save();
      ctx.translate(smoothX, smoothY);
      ctx.rotate(Date.now() / 500);
      ctx.strokeStyle = colors.cyan;
      ctx.setLineDash([8, 12]);
      ctx.beginPath();
      ctx.arc(0, 0, 20, 0, Math.PI * 2);
      ctx.stroke();
      ctx.restore();

      // Data text
      ctx.fillStyle = colors.green;
      ctx.font = '10px Space Grotesk';
      ctx.fillText(`X: ${Math.round(smoothX)}`, smoothX + 25, smoothY - 20);
      ctx.fillText(`Y: ${Math.round(smoothY)}`, smoothX + 25, smoothY - 8);

      if (Math.random() > 0.96) {
        ctx.fillStyle = colors.red;
        ctx.fillText('LOCKED', smoothX + 25, smoothY + 20);
      }

      requestAnimationFrame(drawHud);
    }

    drawHud();

    // ----------------------
    // FORM: send to Formspree + UX status
    // ----------------------
    const form = document.getElementById('brief-form');
    const statusBox = document.getElementById('form-status');
    const submitBtn = document.getElementById('submit-btn');
    const nextInput = document.getElementById('next-url');
    const toast = document.getElementById('toast');

    // Set action + redirect target
    form.action = window.BOLD_FORM_ACTION;
    nextInput.value = `${window.BOLD_SITE_URL.replace(/\/$/, '')}/thanks.html`;

    function showToast(msg) {
      toast.textContent = msg;
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 2400);
    }

    function setStatus(html, isError = false) {
      statusBox.classList.remove('hidden');
      statusBox.innerHTML = html;
      statusBox.style.borderColor = isError ? 'rgba(255,51,51,0.7)' : 'rgba(57,255,20,0.6)';
    }

    function validateEmail(value) {
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(String(value || '').trim());
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const fd = new FormData(form);
      const company = (fd.get('client_name') || '').toString().trim();
      const email = (fd.get('email') || '').toString().trim();
      const sector = (fd.get('sector') || '').toString().trim();
      const objective = (fd.get('objective') || '').toString().trim();

      // Client-side validation
      if (!company || !email || !sector || !objective) {
        showToast('Fill required fields.');
        setStatus('> ERROR: Missing required fields. Please complete COMPANY, EMAIL, SECTOR, OBJECTIVE.', true);
        return;
      }
      if (!validateEmail(email)) {
        showToast('Invalid email.');
        setStatus('> ERROR: Invalid email format. Please check EMAIL.', true);
        return;
      }

      // UX
      submitBtn.disabled = true;
      submitBtn.textContent = 'SENDING...';
      setStatus('> Sending...');

      try {
        const res = await fetch(form.action, {
          method: 'POST',
          body: fd,
          headers: { 'Accept': 'application/json' }
        });

        if (res.ok) {
          setStatus('> RECEIVED. Redirecting...');
          showToast('Brief received. üéØ');
          // Redirect
          window.location.href = nextInput.value;
          return;
        }

        // Handle Formspree JSON error
        let data = null;
        try { data = await res.json(); } catch (_) {}

        if (data && data.errors && data.errors.length) {
          const msg = data.errors.map(x => x.message).join(' | ');
          setStatus(`> ERROR: ${msg}`, true);
        } else {
          setStatus('> ERROR: Submission failed. Check Formspree settings (email verified / form active).', true);
        }
        showToast('Send failed.');

      } catch (err) {
        setStatus('> ERROR: Network issue. Try again in a minute.', true);
        showToast('Network error.');
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'SUBMIT BRIEF üå∂Ô∏è';
      }
    });

    // Back to top
    document.getElementById('scroll-top').addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: prefersReducedMotion ? 'auto' : 'smooth' });
    });

    // Coords display: small ‚Äúalive‚Äù touch
    const coordsEl = document.getElementById('coords-display');
    if (coordsEl && !prefersReducedMotion) {
      setInterval(() => {
        const lat = 32.0853 + (Math.random() - 0.5) * 0.003;
        const lon = 34.7818 + (Math.random() - 0.5) * 0.003;
        coordsEl.textContent = `${lat.toFixed(4)}¬∞ N, ${lon.toFixed(4)}¬∞ E`;
      }, 1800);
    }
  </script>
</body>
</html>
